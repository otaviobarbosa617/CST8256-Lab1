@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Statistics</h1>
    <p>Enter one, two or three numerical numbers and click Calculate button to get their statistics</p>
</div>
<div class="container d-flex text-left justify-content-center">
    <form method="post">
        <div class="form-group row align-items-center text-left">
            <label class="col-sm-5 col-form-label" for="FirstNumber">First Number:</label>
            <div class="col-sm-5">
                <input class="form-control" asp-for="FirstNumber" id="FirstNumber"/>
            </div>
        </div>
        <br/>
        <div class="form-group row align-items-center">
            <label class="col-sm-5 col-form-label" for="SecondNumber">Second Number:</label>
            <div class="col-sm-5">
                <input class="form-control" asp-for="SecondNumber" id="SecondNumber"/>
            </div>
        </div> 
        <br/>
        <div class="form-group row align-items-center">
            <label class="col-sm-5 col-form-label" for="ThirdNumber">Third Number:</label>
            <div class="col-sm-5">
                <input class="form-control" asp-for="ThirdNumber" id="ThirdNumber"/>
            </div>
        </div>   
        <br/>
        <div class="form-group row align-items-center">
            <label class="col-sm-5 col-form-label sr-only" for="Submit"></label>
            <div class="col-sm-1">
                <button type="submit" class="btn btn-primary" id="Submit">Calculate</button>
            </div>
        </div>
    </form>
    <br/>
</div>
<br/>
@if (Model.Numbers.Count != 0)
{
    <div class="container d-flex flex-row text-left justify-content-center">
        <p class="fw-bold">You entered @Model.Numbers.Count.ToString() number(s). The following are the statistics:</p>
    </div>
    <div class="container d-flex flex-row text-left justify-content-center">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Maximum:
                <span class="badge badge-primary badge-pill text-black text-right">@Model.Numbers.Max().ToString("F2")</span>
            </li>
            <li class="list-group-item">Minimum:
                <span class="badge badge-primary badge-pill text-black text-right">@Model.Numbers.Min().ToString("F2")</span>
            </li>
            <li class="list-group-item">Total:
                <span class="badge badge-primary badge-pill text-black text-right">@Model.Numbers.Sum().ToString("F2")</span>
            </li>
            <li class="list-group-item">Average:
                <span class="badge badge-primary badge-pill text-black text-right alig">@Model.Numbers.Average().ToString("F2")</span>
            </li>
        </ul>
    </div>
}
else
{
    <div class="container d-flex text-left justify-content-center">
        <p class="fw-bold">@Model.ErrorMessage</p>
    </div>
}
